)rawliteral";

// –°—Ç—Ä—É–∫—Ç—É—Ä–∞ –¥–ª—è —É—Å—Ç—Ä–æ–π—Å—Ç–≤
struct DeviceInfo {
  String address;
  int rssi;
  unsigned long lastSeen;
};

DeviceInfo bleDevices[50];
int deviceCount = 0;

// Callback –¥–ª—è BLE —É—Å—Ç—Ä–æ–π—Å—Ç–≤
class MyAdvertisedDeviceCallbacks: public BLEAdvertisedDeviceCallbacks {
    void onResult(BLEAdvertisedDevice advertisedDevice) {
      packetCount++;
      String address = advertisedDevice.getAddress().toString();
      int rssi = advertisedDevice.getRSSI();
      
      // –î–æ–±–∞–≤–ª—è–µ–º –≤ –ª–æ–≥
      String logEntry = "<div class='packet'>";
      logEntry += "<span class='time'>[" + String(millis()/1000) + "s]</span> ";
      logEntry += "<span class='ip'>" + address + "</span> ";
      logEntry += "RSSI: " + String(rssi) + "dBm | ";
      logEntry += "Services: " + String(advertisedDevice.getServiceUUIDCount());
      logEntry += "</div>";
      
      networkLog = logEntry + networkLog;
      if(networkLog.length() > 5000) networkLog = networkLog.substring(0, 5000);
      
      // –°–æ—Ö—Ä–∞–Ω—è–µ–º —É—Å—Ç—Ä–æ–π—Å—Ç–≤–æ
      bool found = false;
      for(int i = 0; i < deviceCount; i++) {
        if(bleDevices[i].address == address) {
          bleDevices[i].rssi = rssi;
          bleDevices[i].lastSeen = millis();
          found = true;
          break;
        }
      }
      
      if(!found && deviceCount < 50) {
        bleDevices[deviceCount].address = address;
        bleDevices[deviceCount].rssi = rssi;
        bleDevices[deviceCount].lastSeen = millis();
        deviceCount++;
      }
    }
};

// –û–±—Ä–∞–±–æ—Ç—á–∏–∫–∏ –≤–µ–±-—Å–µ—Ä–≤–µ—Ä–∞
void handleRoot() {
  server.send(200, "text/html", htmlPage);
}

void handleLog() {
  server.send(200, "text/html", networkLog);
}

void handleStats() {
  String json = "{";
  json += "\"packets\":" + String(packetCount) + ",";
  json += "\"devices\":" + String(deviceCount);
  json += "}";
  server.send(200, "application/json", json);
}

void handleClear() {
  networkLog = "";
  packetCount = 0;
  deviceCount = 0;
  server.send(200, "text/plain", "Log cleared");
}

void handleScan() {
  server.send(200, "text/plain", "Scanning...");
}

void setup() {
  Serial.begin(115200);
  
  // WiFi —Ç–æ—á–∫–∞ –¥–æ—Å—Ç—É–ø–∞
  WiFi.softAP(ssid, password);
  Serial.print("AP IP: ");
  Serial.println(WiFi.softAPIP());
  
  // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è BLE —Å–∫–∞–Ω–µ—Ä–∞
  BLEDevice::init("ESP32-Sniffer");
  pBLEScan = BLEDevice::getScan();
  pBLEScan->setAdvertisedDeviceCallbacks(new MyAdvertisedDeviceCallbacks());
  pBLEScan->setActiveScan(true);
  pBLEScan->setInterval(100);
  pBLEScan->setWindow(99);
  
  // –í–µ–±-—Å–µ—Ä–≤–µ—Ä
  server.on("/", handleRoot);
  server.on("/log", handleLog);
  server.on("/stats", handleStats);
  server.on("/clear", handleClear);
  server.on("/scan", handleScan);
  server.begin();
  
  Serial.println("Network sniffer started");
  pinMode(2, OUTPUT);
  digitalWrite(2, HIGH);
}

void loop() {
  server.handleClient();
  
  // –ü–æ—Å—Ç–æ—è–Ω–Ω–æ–µ —Å–∫–∞–Ω–∏—Ä–æ–≤–∞–Ω–∏–µ BLE
  BLEScanResults* results = pBLEScan->start(3, false);
  if(results) {
    pBLEScan->clearResults();
  }
  
  delay(100);
}
