  </style>
  <script>
    function updateLog() {
      fetch('/log')
        .then(r => r.text())
        .then(data => {
          document.getElementById('terminal').innerHTML = data;
          document.getElementById('terminal').scrollTop = 
            document.getElementById('terminal').scrollHeight;
        });
    }
    
    function updateStats() {
      fetch('/stats')
        .then(r => r.json())
        .then(data => {
          document.getElementById('packets').innerText = data.packets;
          document.getElementById('devices').innerText = data.devices;
        });
    }
    
    function clearLog() {
      if(confirm("–û—á–∏—Å—Ç–∏—Ç—å –ª–æ–≥?")) {
        fetch('/clear');
      }
    }
    
    // –û–±–Ω–æ–≤–ª—è–µ–º –∫–∞–∂–¥—ã–µ 2 —Å–µ–∫—É–Ω–¥—ã
    setInterval(updateLog, 2000);
    setInterval(updateStats, 3000);
    window.onload = function() {
      updateLog();
      updateStats();
    }
  </script>
</head>
<body>
  <div class="container">
    <h1>üì° ESP32 Network Sniffer</h1>
    
    <div class="info">
      <strong>–°–µ—Ç—å:</strong> ESP32-Sniffer<br>
