#include <WiFi.h>
#include <WebServer.h>
#include <BLEDevice.h>
#include <BLEUtils.h>
#include <BLEScan.h>
#include <BLEAdvertisedDevice.h>

// Настройки WiFi
const char* ssid = "ESP32-Jammer";
const char* password = "ramal04198";

// Веб-сервер
WebServer server(80);

// Bluetooth
BLEScan* pBLEScan;
int scanTime = 10; // Длительность сканирования в секундах
bool jammingActive = false;
int devicesFound = 0;

// HTML страница
const char* htmlPage = R"rawliteral(
<!DOCTYPE HTML>
<html>
<head>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <style>
    body { 
      font-family: Arial; 
      text-align: center; 
      margin: 50px; 
      background: #f0f0f0;
    }
    .container {
      background: white;
      padding: 30px;
      border-radius: 15px;
      box-shadow: 0 0 20px rgba(0,0,0,0.1);
      max-width: 500px;
      margin: 0 auto;
    }
    h1 { color: #333; }
    .status { 
      font-size: 1.2em; 
      margin: 20px 0; 
      padding: 10px;
      border-radius: 8px;
    }
    .active { background: #d4edda; color: #155724; }
    .inactive { background: #f8d7da; color: #721c24; }
    button {
      padding: 15px 30px;
      font-size: 18px;
      margin: 10px;
      border: none;
      border-radius: 8px;
      cursor: pointer;
      transition: 0.3s;
    }
    .start-btn { background: #28a745; color: white; }
    .stop-btn { background: #dc3545; color: white; }
    button:hover { opacity: 0.8; }
    .info {
      text-align: left;
      margin-top: 30px;
      padding: 15px;
      background: #e9ecef;
      border-radius: 8px;
    }
  </style>
  <script>
    function updateStatus() {
      fetch('/status')
        .then(response => response.json())
        .then(data => {
          document.getElementById('status').innerHTML = 
            data.jamming ? 
            '<div class="status active">Активно</div>' : 
            '<div class="status inactive">Не активно</div>';
          document.getElementById('devices').innerText = data.devices;
        });
    }
    
    setInterval(updateStatus, 2000);
    window.onload = updateStatus;
  </script>
</head>
<body>
  <div class="container">
    <h1>ESP32 Bluetooth Jammer</h1>
    <div id="status"></div>
    
    <button class="start-btn" onclick="fetch('/start')">Запуск помех</button>
    <button class="stop-btn" onclick="fetch('/stop')">Остановка помех</button>
    
    <div class="info">
      <h3>Информация:</h3>
      <p><strong>IP адрес:</strong> %IP%</p>
      <p><strong>WiFi сети:</strong> %SSID%</p>
      <p><strong>Устройств найдено:</strong> <span id="devices">%DEVICES%</span></p>
    </div>
  </div>
</body>
</html>
)rawliteral";

// Класс для обработки найденных BLE устройств
class MyAdvertisedDeviceCallbacks: public BLEAdvertisedDeviceCallbacks {
    void onResult(BLEAdvertisedDevice advertisedDevice) {
      Serial.printf("Found BLE: %s\n", advertisedDevice.toString().c_str());
      devicesFound++;
    }
};

void startJamming() {
  jammingActive = true;
  devicesFound = 0;
  Serial.println("Jamming started...");
}

void stopJamming() {
  jammingActive = false;
  Serial.println("Jamming stopped");
}

void handleRoot() {
  String page = htmlPage;
  page.replace("%IP%", WiFi.softAPIP().toString());
  page.replace("%SSID%", ssid);
  page.replace("%DEVICES%", String(devicesFound));
  server.send(200, "text/html", page);
}

void handleStart() {
  startJamming();
  server.send(200, "text/plain", "Jamming started");
}

void handleStop() {
  stopJamming();
  server.send(200, "text/plain", "Jamming stopped");
}

void handleStatus() {
  String json = "{";
  json += "\"jamming\":";
  json += jammingActive ? "true" : "false";
  json += ",\"devices\":";
  json += devicesFound;
  json += "}";
  server.send(200, "application/json", json);
}

void handleNotFound() {
  server.send(404, "text/plain", "Page Not Found");
}

void setup() {
  Serial.begin(115200);
  delay(1000);
  
  Serial.println("\n=== ESP32 Bluetooth Jammer ===\n");
  
  // Запуск WiFi точки доступа
  Serial.print("Starting AP...");
  WiFi.softAP(ssid, password);
  
  Serial.println("Done!");
  Serial.print("AP IP address: ");
  Serial.println(WiFi.softAPIP());
  Serial.print("AP SSID: ");
  Serial.println(ssid);
  
  // Инициализация BLE
  BLEDevice::init("ESP32-Jammer");
  pBLEScan = BLEDevice::getScan();
  pBLEScan->setAdvertisedDeviceCallbacks(new MyAdvertisedDeviceCallbacks());
  pBLEScan->setActiveScan(true);
  pBLEScan->setInterval(100);
  pBLEScan->setWindow(99);
  
  // Настройка веб-сервера
  server.on("/", handleRoot);
  server.on("/start", handleStart);
  server.on("/stop", handleStop);
  server.on("/status", handleStatus);
  server.onNotFound(handleNotFound);
  
  server.begin();
  Serial.println("HTTP server started");
  
  Serial.println("\nCommands:");
  Serial.println("1. Connect to WiFi: " + String(ssid));
  Serial.println("2. Open browser: http://" + WiFi.softAPIP().toString());
  Serial.println("3. Use web interface to control jamming");
}

void loop() {
  server.handleClient();
  
  if (jammingActive) {
    // Создание помех через активное сканирование BLE
    BLEScanResults* pFoundDevices = pBLEScan->start(scanTime, false);
    
    if (pFoundDevices != nullptr) {
      Serial.print("Devices found: ");
      Serial.println(pFoundDevices->getCount());
    }
    
    // Очистка результатов
    pBLEScan->clearResults();
    
    // Короткая задержка перед следующим сканированием
    delay(1000);
  }
  
  delay(100);
}
