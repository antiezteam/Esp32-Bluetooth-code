#include <WiFi.h>
#include <WebServer.h>
#include <BLEDevice.h>
#include <BLEScan.h>
#include <BLEAdvertisedDevice.h>

// Настройки WiFi
const char* ssid = "ESP32-Control";
const char* password = "ramal04198";

WebServer server(80);
BLEScan* pBLEScan;
bool bleActive = false;
bool bleScanning = false;
String bleLog = "";

// HTML страница
const char* htmlPage = R"rawliteral(
<!DOCTYPE HTML>
<html>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <style>
    body { font-family: Arial; margin: 20px; background: #f0f0f0; }
    .container { max-width: 600px; margin: 0 auto; background: white; padding: 20px; border-radius: 10px; }
    h1 { text-align: center; color: #333; }
    .status { padding: 10px; border-radius: 5px; margin: 10px 0; }
    .active { background: #d4edda; }
    .inactive { background: #f8d7da; }
    .btn { 
      padding: 12px 24px; margin: 5px; border: none; border-radius: 5px; 
      cursor: pointer; font-size: 16px; color: white; 
    }
    .start { background: #28a745; }
    .stop { background: #dc3545; }
    .scan { background: #007bff; }
    .log { 
      background: #343a40; color: white; padding: 10px; 
      border-radius: 5px; margin-top: 20px; height: 200px; 
      overflow-y: auto; font-family: monospace; 
    }
    .info { background: #e9ecef; padding: 10px; border-radius: 5px; margin: 10px 0; }
  </style>
  <script>
    function updateStatus() {
      fetch('/status')
        .then(r => r.json())
        .then(data => {
          document.getElementById('status').innerHTML = 
            data.bleActive ? 
            '<div class="status active">Bluetooth Jammer: АКТИВЕН</div>' :
            '<div class="status inactive">Bluetooth Jammer: ВЫКЛЮЧЕН</div>';
        });
    }
    
    function updateLog() {
      fetch('/log')
        .then(r => r.text())
        .then(text => {
          document.getElementById('blelog').innerText = text;
        });
    }
    
    setInterval(updateStatus, 2000);
    setInterval(updateLog, 3000);
    window.onload = function() { updateStatus(); updateLog(); }
  </script>
</head>
<body>
  <div class="container">
    <h1>ESP32 Control Panel</h1>
    
    <div class="info">
      <strong>WiFi:</strong> ESP32-Control<br>
      <strong>IP:</strong> 192.168.4.1<br>
      <strong>Пароль:</strong> ramal04198
    </div>
    
    <div id="status"></div>
    
    <div>
      <button class="btn start" onclick="fetch('/start')">ВКЛ BLE Jammer</button>
      <button class="btn stop" onclick="fetch('/stop')">ВЫКЛ BLE Jammer</button>
      <button class="btn scan" onclick="fetch('/scan')">Сканировать BLE</button>
    </div>
    
    <div>
      <button class="btn" onclick="fetch('/wifi-scan')">Сканировать WiFi</button>
      <button class="btn" onclick="fetch('/restart')">Перезагрузить</button>
    </div>
    
    <h3>Лог устройств:</h3>
    <div id="blelog" class="log"></div>
  </div>
</body>
</html>
)rawliteral";

// Callback для BLE устройств
class MyAdvertisedDeviceCallbacks: public BLEAdvertisedDeviceCallbacks {
    void onResult(BLEAdvertisedDevice advertisedDevice) {
      String deviceInfo = "BLE: " + advertisedDevice.getAddress().toString() + 
                         " | RSSI: " + String(advertisedDevice.getRSSI());
      bleLog = deviceInfo + "\n" + bleLog;
      if(bleLog.length() > 1000) bleLog = bleLog.substring(0, 1000);
    }
};

// Обработчики веб-сервера
void handleRoot() {
  server.send(200, "text/html", htmlPage);
}

void handleStart() {
  bleActive = true;
  server.send(200, "text/plain", "BLE Jammer started");
}

void handleStop() {
  bleActive = false;
  server.send(200, "text/plain", "BLE Jammer stopped");
}

void handleScan() {
  bleScanning = true;
  BLEScanResults* results = pBLEScan->start(5, false);
  if(results) {
    bleLog = "Найдено: " + String(results->getCount()) + " BLE устройств\n" + bleLog;
    pBLEScan->clearResults();
  }
  bleScanning = false;
  server.send(200, "text/plain", "Scan complete");
}

void handleLog() {
  server.send(200, "text/plain", bleLog);
}

void handleStatus() {
  String json = "{\"bleActive\":";
  json += bleActive ? "true" : "false";
  json += "}";
  server.send(200, "application/json", json);
}

void handleWiFiScan() {
  bleLog = "Сканирование WiFi...\n" + bleLog;
  server.send(200, "text/plain", "WiFi scan started");
}

void handleRestart() {
  server.send(200, "text/html", "<h1>Перезагрузка...</h1>");
  delay(1000);
  ESP.restart();
}

void setup() {
  Serial.begin(115200);
  
  // WiFi точка доступа
  WiFi.softAP(ssid, password);
  Serial.print("AP IP: ");
  Serial.println(WiFi.softAPIP());
  
  // Инициализация BLE
  BLEDevice::init("ESP32-Control");
  pBLEScan = BLEDevice::getScan();
  pBLEScan->setAdvertisedDeviceCallbacks(new MyAdvertisedDeviceCallbacks());
  pBLEScan->setActiveScan(true);
  pBLEScan->setInterval(100);
  pBLEScan->setWindow(99);
  
  // Веб-сервер
  server.on("/", handleRoot);
  server.on("/start", handleStart);
  server.on("/stop", handleStop);
  server.on("/scan", handleScan);
  server.on("/log", handleLog);
  server.on("/status", handleStatus);
  server.on("/wifi-scan", handleWiFiScan);
  server.on("/restart", handleRestart);
  server.begin();
  
  Serial.println("Server started");
  pinMode(2, OUTPUT);
}

void loop() {
  server.handleClient();
  
  if(bleActive && !bleScanning) {
    // "Глушение" BLE
    BLEScanResults* results = pBLEScan->start(1, false);
    if(results) {
      pBLEScan->clearResults();
    }
    digitalWrite(2, !digitalRead(2)); // Мигаем светодиодом
  } else {
    digitalWrite(2, LOW);
  }
  
  delay(10);
}
